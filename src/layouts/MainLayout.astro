<style is:global>
  :root {
    --primary: #ff86c8;
    --primary-light: #ffb8e0;
    --accent: #b892ff;
    --secondary-accent: #ffcef3;
    --text: #333;
    --text-light: #666;
    --background: #fff8fa;
    --card-bg: #ffffff;
    --shadow: rgba(255, 134, 200, 0.15);
    --gradient: linear-gradient(90deg, var(--primary) 0%, var(--accent) 100%);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    cursor: none;
  }

  body {
    font-family: "Quicksand", sans-serif;
    background-color: var(--background);
    color: var(--text);
    line-height: 1.6;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    overflow-x: hidden;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: "Nunito", sans-serif;
    color: var(--primary);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    flex-grow: 1;
  }

  a {
    color: var(--accent);
    text-decoration: none;
    transition: color 0.3s;
  }

  a:hover {
    color: var(--primary);
  }

  /* Cursor */
  .cursor-follower {
    position: fixed;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: var(--primary-light);
    opacity: 0.5;
    pointer-events: none;
    z-index: 9999;
    box-shadow: 0 0 10px var(--primary);
    transform: translate(-50%, -50%);
    transition:
      transform 0.1s ease-out,
      opacity 0.3s ease;
  }

  body:hover .cursor-follower {
    opacity: 0.8;
    transform: translate(-50%, -50%) scale(1.2);
  }

  /* Navigation */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    z-index: 1000;
    box-shadow: 0 2px 15px var(--shadow);
  }

  .nav-logo {
    font-family: "Nunito", sans-serif;
    font-weight: 700;
    font-size: 1.8rem;
    color: var(--primary);
    background: var(--gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: pulse 2s infinite;
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: 1.5rem;
  }

  .nav-links li a {
    font-weight: 600;
    padding: 0.5rem 0.75rem;
    border-radius: 20px;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .nav-links li a span {
    transform: scale(1);
    transition: transform 0.3s;
  }

  .nav-links li a:hover span {
    transform: scale(1.3);
  }

  .nav-links li a:hover {
    background-color: var(--primary-light);
    color: white;
  }

  .nav-toggle {
    display: none;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .nav-toggle .bar {
    width: 25px;
    height: 3px;
    margin: 5px 0;
    background: var(--primary);
    transition: 0.3s;
  }

  /* Footer */
  .footer {
    position: relative;
    text-align: center;
    padding: 3rem 0 2rem;
    margin-top: 4rem;
    font-size: 0.9rem;
    color: var(--text-light);
    background: linear-gradient(
      to top,
      var(--primary-light) 0%,
      transparent 100%
    );
    overflow: hidden;
  }

  .footer-decorations {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    pointer-events: none;
    z-index: -1;
  }

  .footer-deco {
    position: absolute;
    opacity: 0.2;
  }

  .footer-deco.star {
    width: 40px;
    height: 40px;
    top: 20%;
    left: 15%;
    animation: float 6s ease-in-out infinite;
  }

  .footer-deco.heart {
    width: 30px;
    height: 30px;
    top: 30%;
    right: 15%;
    animation: float 7s ease-in-out infinite 1s;
  }

  .footer-deco.cloud {
    width: 50px;
    height: 50px;
    bottom: 20%;
    right: 25%;
    animation: float 8s ease-in-out infinite 2s;
  }

  .footer-icons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 1rem;
  }

  .footer-icons a {
    color: var(--primary);
    transition:
      transform 0.3s,
      color 0.3s;
  }

  .footer-icons a:hover {
    transform: scale(1.2);
    color: var(--accent);
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.7;
    }
  }

  @media (prefers-color-scheme: dark) {
    :root {
      --text: #f0f0f0;
      --text-light: #cccccc;
      --background: #1a1a2e;
      --card-bg: #252546;
      --shadow: rgba(185, 146, 255, 0.15);
    }

    .navbar {
      background: rgba(26, 26, 46, 0.85);
    }
  }

  @media (max-width: 768px) {
    .nav-links {
      position: fixed;
      top: 70px;
      right: -100%;
      flex-direction: column;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      width: 80%;
      height: calc(100vh - 70px);
      padding: 2rem;
      transition: right 0.3s ease;
      box-shadow: -5px 0 15px var(--shadow);
      z-index: 999;
    }

    .nav-links.active {
      right: 0;
    }

    .nav-toggle {
      display: block;
    }

    .nav-toggle.active .bar:nth-child(1) {
      transform: rotate(45deg) translate(5px, 6px);
    }

    .nav-toggle.active .bar:nth-child(2) {
      opacity: 0;
    }

    .nav-toggle.active .bar:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -6px);
    }

    @media (prefers-color-scheme: dark) {
      .nav-links {
        background: rgba(26, 26, 46, 0.95);
      }
    }
  }
</style>
