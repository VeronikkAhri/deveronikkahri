        if (navToggle && navLinks) {
          navToggle.addEventListener("click", () => {
            navLinks.classList.toggle("active");
            navToggle.classList.toggle("active");
          });
        }

        // Cursor follower
        const cursor = document.querySelector(
          ".cursor-follower"
        ) as HTMLElement;

        if (cursor) {
