---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  link?: string;
}

const { title, description, image, tags, link } = Astro.props;
---

<div class="project-card">
  <div class="project-image">
    <img src={image} alt={title} />
  </div>
  <div class="project-content">
    <h3>{title}</h3>
    <p>{description}</p>
    <div class="project-tags">
      {tags.map((tag) => <span class="tag">{tag}</span>)}
    </div>
    {
      link && (
        <a href={link} target="_blank" class="project-link">
          View Project <span>â†’</span>
        </a>
      )
    }
  </div>
</div>

<style>
  .project-card {
    background-color: var(--card-bg);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 20px var(--shadow);
    transition:
      transform 0.3s,
      box-shadow 0.3s;
    position: relative;
    z-index: 1;
  }

  .project-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(45deg, var(--primary-light), var(--accent));
    opacity: 0;
    transition: opacity 0.3s;
    z-index: -1;
    border-radius: 20px;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px var(--shadow);
  }

  .project-card:hover::before {
    opacity: 0.05;
  }

  .project-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }

  .project-card:hover .project-image img {
    transform: scale(1.05);
  }

  .project-content {
    padding: 1.5rem;
  }

  h3 {
    margin-bottom: 0.5rem;
    color: var(--primary);
    font-size: 1.5rem;
  }

  p {
    margin-bottom: 1rem;
    font-size: 0.95rem;
    color: var(--text-light);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tag {
    background-color: var(--primary-light);
    color: var(--text);
    font-size: 0.75rem;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-weight: 500;
  }

  .project-link {
    display: inline-flex;
    align-items: center;
    font-weight: 600;
    font-size: 0.9rem;
  }

  .project-link span {
    transition: transform 0.3s;
    display: inline-block;
    margin-left: 0.25rem;
  }

  .project-link:hover span {
    transform: translateX(3px);
  }
</style>
